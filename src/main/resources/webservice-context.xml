<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="taskMessageResend" class="org.guce.siat.common.job.TaskMessageResend" />

    <!-- specifing class and method that is going to be called on a specified time basis -->
    <bean id="jobMessageResend"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="taskMessageResend" />
        <property name="targetMethod" value="resendMessage" />
    </bean>

    <!-- Run the job every 5 seconds -->
    <bean id="cronTrigger"  class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="jobMessageResend" />
        <property name="cronExpression" value="0 0/1 * ? * *" />
        <property name="cronExpression" value="0 0 23 * * ?" />
    </bean>

    <!-- scheduler factory bean to bind,the executing code and time intervals together -->
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="jobDetails">
            <list>
                <ref bean="jobMessageResend" />
            </list>
        </property>
        <property name="triggers">
            <list>
                <ref bean="cronTrigger" />
            </list>
        </property>
    </bean>
</beans>












